# Backend Environment Variables Template
# ⚠️ SECURITY WARNING: This file contains example values only
# Copy this file to .env and replace ALL values with your own secure credentials

# Server Configuration
PORT=5000
NODE_ENV=development

# Database - ⚠️ CHANGE USERNAME AND PASSWORD
MONGODB_URI=mongodb+srv://YOUR_USERNAME:TplynyeLYiDdZLaY@cluster0.7pefvkv.mongodb.net/?appName=Cluster0

# JWT Security - ✅ Generate new secrets with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=GENERATE_NEW_64_BYTE_SECRET_HERE
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=GENERATE_NEW_64_BYTE_SECRET_HERE
JWT_REFRESH_EXPIRE=30d

# Security Configuration
CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:3000,https://your-frontend-domain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
# For production, add: FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account",...}

# OAuth Configuration - ⚠️ REGENERATE SECRETS
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=REGENERATE_NEW_GITHUB_SECRET

# Email Configuration - ⚠️ CHANGE EMAIL AND PASSWORD
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=GENERATE_NEW_APP_PASSWORD
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# File Upload Security
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# Session Security - ✅ Generate new secret with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=GENERATE_NEW_32_BYTE_SECRET_HERE
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=lax

# API Security - ✅ Generate new secret with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
API_VERSION=v1
ENABLE_API_DOCS=true
ADMIN_API_KEY=GENERATE_NEW_32_BYTE_SECRET_HERE

# Payment Configuration - ⚠️ CHANGE TO YOUR ACCOUNT
PAYMENT_PROMPTPAY_NUMBER=your_promptpay_number
PAYMENT_PROMPTPAY_NAME=Your Company Name

# Bank Account Configuration - ⚠️ CHANGE TO YOUR ACCOUNT
PAYMENT_BANK_NAME=YOUR_BANK_NAME
PAYMENT_BANK_ACCOUNT=your_account_number
PAYMENT_BANK_ACCOUNT_NAME=Your Account Name
PAYMENT_BANK_BRANCH=Your Branch

# Payment Settings
PAYMENT_ENABLED=true
PAYMENT_CURRENCY=THB
PAYMENT_TIMEOUT_HOURS=24

# Tax Configuration
VAT_ENABLED=false
VAT_RATE=0.07
VAT_NUMBER=
TAX_INVOICE_PREFIX=YOUR_PREFIX

# Pricing Configuration
PRICING_PHASE=phase0

# Payment Verification - ✅ Generate new secret with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
PAYMENT_AUTO_VERIFY=true
PAYMENT_WEBHOOK_SECRET=GENERATE_NEW_32_BYTE_SECRET_HERE

# Payment Gateway APIs (Choose one)
# SCB Easy API
SCB_API_KEY=your_scb_api_key
SCB_API_SECRET=your_scb_api_secret
SCB_PARTNER_ID=your_scb_partner_id

# Kbank Open API
KBANK_API_KEY=your_kbank_api_key
KBANK_API_SECRET=your_kbank_api_secret
KBANK_CLIENT_ID=your_kbank_client_id
KBANK_CLIENT_SECRET=your_kbank_client_secret

# Third-party Payment Gateway
PAYMENT_GATEWAY_API_KEY=your_gateway_api_key
PAYMENT_GATEWAY_SECRET=your_gateway_secret
PAYMENT_GATEWAY_URL=https://your-gateway-url.com
PAYMENT_GATEWAY_PROVIDER=your_provider_name

# Development/Testing
PAYMENT_TEST_MODE=true